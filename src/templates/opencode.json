{
	"$schema": "https://opencode.ai/config.json",
	"enabled_providers": ["litellm-anthropic", "litellm-openai"],
	"instructions": ["AGENTS.md", "CLAUDE.md"],
	"small_model": "litellm-anthropic/claude-haiku-4-5-20251001",
	"model": "litellm-anthropic/claude-sonnet-4-6",
	"agent": {
		"plan": {
			"mode": "primary",
			"model": "litellm-anthropic/claude-haiku-4-5-20251001"
		}
	},
	"provider": {
		"litellm-openai": {
			"name": "LiteLLM (OpenAI)",
			"npm": "@ai-sdk/openai-compatible",
			"options": {
				"baseURL": "{env:LITELLM_API_URL}",
				"apiKey": "{env:LITELLM_API_KEY}"
			},
			"models": {
				"gpt-5.3-codex": {"name": "GPT-5.3 Codex"},
				"gpt-5.2": {"name": "GPT-5.2"},
				"gpt-5.2-codex": {"name": "GPT-5.2 Codex"},
				"gpt-5.1": {"name": "GPT-5.1"},
				"gpt-5.1-codex": {"name": "GPT-5.1 Codex"},
				"gpt-5.1-codex-max": {"name": "GPT-5.1 Codex Max"},
				"gpt-5.1-codex-mini": {"name": "GPT-5.1 Codex Mini"},
				"gpt-5-codex": {"name": "GPT-5 Codex"},
				"gpt-5": {"name": "GPT-5"},
				"gpt-5-mini": {"name": "GPT-5 Mini"},
				"gpt-5-nano": {"name": "GPT-5 Nano"},
				"o4-mini": {"name": "o4 Mini"},
				"o3": {"name": "o3"},
				"o3-mini": {"name": "o3 Mini"},
				"gpt-4.1": {"name": "GPT-4.1"},
				"gpt-4.1-mini": {"name": "GPT-4.1 Mini"},
				"gpt-4.1-nano": {"name": "GPT-4.1 Nano"},
				"gpt-4o": {"name": "GPT-4o"},
				"gpt-4o-mini": {"name": "GPT-4o-mini"}
			}
		},
		"litellm-anthropic": {
			"name": "LiteLLM (Anthropic)",
			"npm": "@ai-sdk/openai-compatible",
			"options": {
				"baseURL": "{env:LITELLM_API_URL}",
				"apiKey": "{env:LITELLM_API_KEY}"
			},
			"models": {
				"claude-sonnet-4-6": {"name": "Claude Sonnet 4.6"},
				"claude-sonnet-4-5-20250929": {"name": "Claude Sonnet 4.5"},
				"claude-opus-4-6": {"name": "Claude Opus 4.6"},
				"claude-opus-4-5-20251101": {"name": "Claude Opus 4.5"},
				"claude-haiku-4-5-20251001": {"name": "Claude 4.5 Haiku"},
				"claude-opus-4-1-20250805": {"name": "Claude Opus 4.1"},
				"claude-opus-4-20250514": {"name": "Claude Opus 4"},
				"claude-sonnet-4-20250514": {"name": "Claude Sonnet 4"}
			}
		}
	}
}
