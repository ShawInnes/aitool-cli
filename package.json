{
	"name": "aitool-cli",
	"version": "0.4.4",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=24"
	},
	"scripts": {
		"dev": "bun run --watch src/cli.tsx",
		"start": "bun run src/cli.tsx",
		"build:darwin-arm64": "bun build --compile --minify --target=bun-darwin-arm64 src/cli.tsx --outfile dist/aitool-darwin-arm64",
		"build:darwin-x64": "bun build --compile --minify --target=bun-darwin-x64 src/cli.tsx --outfile dist/aitool-darwin-x64",
		"build:linux-x64": "bun build --compile --minify --target=bun-linux-x64 src/cli.tsx --outfile dist/aitool-linux-x64",
		"build:linux-arm64": "bun build --compile --minify --target=bun-linux-arm64 src/cli.tsx --outfile dist/aitool-linux-arm64",
		"build:win-arm64": "bun build --compile --minify --target=bun-windows-x64-baseline src/cli.tsx --outfile dist/aitool-win-arm64.exe",
		"build:win-x64": "bun build --compile --minify --target=bun-windows-x64 src/cli.tsx --outfile dist/aitool-win-x64.exe",
		"build:all": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:win-arm64 && bun run build:win-x64",
		"release": "npm version patch --message 'chore: release v%s'",
		"release:minor": "npm version minor --message 'chore: release v%s'",
		"release:major": "npm version major --message 'chore: release v%s'",
		"lint:prettier": "prettier --check src/",
		"lint:xo": "xo src/",
		"lint": "bun run lint:prettier && bun run lint:xo",
		"test": "bun test tests/"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"commander": "^14.0.3",
		"dayjs": "^1.11.19",
		"ink": "^6.8.0",
		"react": "^19.2.4",
		"react-devtools-core": "^7.0.1",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^8.1.0",
		"@types/bun": "^1.3.9",
		"@types/react": "^19.2.14",
		"@vdemedes/prettier-config": "^2.0.1",
		"chalk": "^5.6.2",
		"eslint-config-xo-react": "^0.29.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"ink-testing-library": "^4.0.0",
		"prettier": "^3.8.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"xo": "^1.2.3"
	},
	"xo": [
		{
			"react": true,
			"prettier": true,
			"semicolon": true,
			"rules": {
				"react/prop-types": "off",
				"n/prefer-global/process": "off",
				"@typescript-eslint/naming-convention": "off",
				"unicorn/filename-case": "off",
				"unicorn/no-process-exit": "off",
				"react/react-in-jsx-scope": "off"
			}
		}
	],
	"prettier": "@vdemedes/prettier-config"
}
